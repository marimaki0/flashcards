<form method="post" action="{{ path('app_flashcard_delete', {'id': flashcard.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" style="display: inline;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ flashcard.id) }}">
    <button type="submit" style="
        background-color: #dc3545;
        color: white;
        border: none;
        padding: 6px 12px;
        border-radius: 4px;
        cursor: pointer;
        font-size: 14px;
        font-weight: 500;
        transition: background-color 0.2s;
    " onmouseover="this.style.backgroundColor='#c82333'" onmouseout="this.style.backgroundColor='#dc3545'">
        Delete
    </button>
</form>